<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticaPalabrasMAUI.VisualitzationWordPage"
             Title="">

    <Grid RowDefinitions="2*,*,2*">
        <Label Text="{StaticResource Imagine}" FontSize="100" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" />
        <Label Grid.Row="1"
                Text="{Binding Path=Word,Mode=OneWay}"
                FontSize="Header"
            
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center"
            />
    </Grid>
   
</ContentPage>