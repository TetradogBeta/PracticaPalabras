<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PracticaPalabrasMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PracticaPalabrasMAUI"
    xmlns:info="clr-namespace:Microsoft.Maui.ApplicationModel;assembly=Microsoft.Maui.Essentials"
    
    Shell.FlyoutBehavior="Flyout">

    <Shell.FlyoutHeader>
        <Image Source="gramatica.svg" HeightRequest="120" Margin="10"/>
    </Shell.FlyoutHeader>

    <ShellContent
        Title="{StaticResource Play}"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="{StaticResource Dictionary}"
        ContentTemplate="{DataTemplate local:DictionaryPage}"
        Route="DictionaryPage" />

    <Shell.FlyoutFooter>
        <VerticalStackLayout Padding="10">
            <Label Text="{StaticResource LangToChange}" IsVisible="{Binding Path=IsActualLang,Mode=OneWay}"/>
            <Label Text="{StaticResource LangChanged}" IsVisible="{Binding Path=NotIsActualLang,Mode=OneWay}"/>
            <HorizontalStackLayout x:Name="lstLangs" Padding="10"/>
            <Label Text="{x:Static info:AppInfo.Name}"/>
            <Label Text="{x:Static info:AppInfo.VersionString}"/>
        </VerticalStackLayout>
    </Shell.FlyoutFooter>
</Shell>
